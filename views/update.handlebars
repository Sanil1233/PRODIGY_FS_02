<form method="POST" action="/update/{{employee._id}}" class="shadow p-4 rounded bg-light">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{employee.name}}"
      required
    />
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      name="email"
      value="{{employee.email}}"
      required
    />
  </div>
  <div class="mb-3">
    <label for="position" class="form-label">Position</label>
    <input
      type="text"
      class="form-control"
      id="position"
      name="position"
      value="{{employee.position}}"
      required
    />
  </div>
  <div class="mb-3">
    <label for="salary" class="form-label">Salary</label>
    <input
      type="number"
      class="form-control"
      id="salary"
      name="salary"
      value="{{employee.salary}}"
      required
    />
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-success">Update</button>
    <a href="/employees" class="btn btn-secondary">Cancel</a>
  </div>
</form>

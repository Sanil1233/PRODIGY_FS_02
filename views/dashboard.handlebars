<h2 class="text-center">Dashboard</h2>
  <div class="container">
  <div class="d-flex justify-content-between mb-3">
    <a href="/employees/add" class="btn btn-primary">Add Employee</a>

    <form method="GET" action="/employees/search" class="d-flex">
      <input
        type="text"
        name="query"
        class="form-control"
        placeholder="Search employee by name or email"
        required
      />
      <button type="submit" class="btn btn-secondary ml-2">Search</button>
    </form>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.position}}</td>
        <td>{{this.salary}}</td>
        <td>
          <div class="btn-container">
            <form method="POST" action="/employees/update/{{_id}}" class="m-0">
              <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <form method="POST" action="/employees/delete/{{_id}}" class="m-0">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
